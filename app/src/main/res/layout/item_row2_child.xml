<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginHorizontal="@dimen/space_20"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_margin="4dp"
            android:layout_marginHorizontal="@dimen/space_20"
            app:cardCornerRadius="@dimen/space_8"
            app:cardElevation="@dimen/space_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_row2_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_8"
                android:paddingVertical="@dimen/space_16"
                android:text="@string/undang_undang"
                android:textSize="@dimen/font_title_size"
                android:textStyle="bold"
                android:textColor="@color/milkSoda"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>