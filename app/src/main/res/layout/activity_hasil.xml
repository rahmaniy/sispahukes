<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/creamCheeseFrosting"
        tools:context=".activity.HasilKonsultasiActivity">

    <TextView
            android:id="@+id/tv_hasil_kasus"
            android:textSize="@dimen/font_title_size"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="viewStart"
            android:text="@string/hello_blank_fragment" />

    <TextView
            android:id="@+id/tv_sanksi"
            android:textStyle="bold"
            android:layout_below="@id/tv_hasil_kasus"
            android:textSize="@dimen/font_title_size"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="viewStart"
            android:text="@string/hello_blank_fragment" />

    <TextView
            android:id="@+id/tv_hasil_kasus_penjelasan"
            android:layout_below="@id/tv_sanksi"
            android:textSize="@dimen/font_title_size"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="viewStart"
            android:text="@string/hello_blank_fragment" />

    <TextView
            android:id="@+id/tv_hasil_kasus_catatan"
            android:textStyle="bold"
            android:layout_below="@id/tv_hasil_kasus_penjelasan"
            android:textSize="@dimen/font_title_size"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="viewStart"
            android:text="@string/hello_blank_fragment" />

    <ProgressBar
            android:id="@+id/progress_bar_hasil"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>