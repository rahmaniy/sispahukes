<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_margin="4dp"
            app:cardCornerRadius="@dimen/space_8"
            app:cardElevation="@dimen/space_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/space_8"
                android:paddingVertical="@dimen/space_16"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_undang_undang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/undang_undang"
                    android:textSize="@dimen/font_title_size"
                    android:textStyle="bold"
                    android:textColor="@color/milkSoda"/>

            <TextView
                    android:id="@+id/tv_no_uu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="uu no xxx"
                    android:textSize="@dimen/font_body_s_size"
                    android:textColor="@color/milkSoda"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>