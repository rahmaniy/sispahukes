<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/creamCheeseFrosting">

    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <ImageView
            android:src="@drawable/ic_undraw_medicine_b1ol"
            android:id="@+id/identifikasi_image"
            android:layout_marginHorizontal="@dimen/space_32"
            android:layout_marginVertical="@dimen/space_32"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <RelativeLayout
            android:layout_below="@+id/img_identifikasi"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:layout_marginHorizontal="@dimen/space_64"
                    android:background="@drawable/btn_rounded"
                    android:id="@+id/btn_mulai_identifikasi"
                    android:textColor="@color/milkSoda"
                    android:text="identifikasi sengketa medis"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <Button
                    android:layout_marginHorizontal="@dimen/space_64"
                    android:background="@drawable/btn_rounded"
                    android:id="@+id/btn_konsultasi"
                    android:layout_below="@id/btn_mulai_identifikasi"
                    android:textColor="@color/milkSoda"
                    android:text="konsultasi sengketa medis"
                    android:layout_marginTop="@dimen/space_32"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>